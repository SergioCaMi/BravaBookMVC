<%- include("partials/header") %>

  <%- include("partials/mensajes") %>
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm mb-4">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">BravaBook Dashboard</a>
        <div class="ms-auto">
          <a href="/logout" class="btn btn-outline-primary">Cerrar sesión</a>
        </div>
      </div>
    </nav>

    <div class="container-fluid">
      <div class="row">
        <!-- Aside - Menú lateral -->
        <aside class="col-md-3 col-lg-2 d-flex flex-column p-4 bg-light border-end">
          <h5 class="mb-3">Menú</h5>
          <ul class="nav nav-pills flex-column">
            <li class="nav-item"><a href="#" class="nav-link active">Perfil</a></li>
            <li class="nav-item"><a href="/reservation/<%=user.id%>" class="nav-link">Reservas</a></li>
            <li class="nav-item"><a href="/profile/edit" class="nav-link">Configuración</a></li>
          </ul>
        </aside>

        <!-- Main Content -->
        <main class="col-md-9 col-lg-10 p-4">
          <div class="row align-items-center mb-4">
            <div class="col-auto">
              <img src="/uploads/<%= user.avatar %>" alt="Avatar de <%= user.name %>"
                class="img-thumbnail rounded-circle" style="width: 150px; height: 150px; object-fit: cover;">

            </div>
            <div class="col">
              <h2>
                <%= user.name %>
              </h2>
              <p class="text-muted">
                <%= user.role==='admin' ? 'Administrador' : 'Usuario estándar' %>
              </p>
            </div>
          </div>

          <!-- Datos del modelo -->
          <div class="card shadow-sm mb-4">
            <div class="card-body">
              <h5 class="card-title">Datos de cuenta</h5>
              <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Email:</strong>
                  <%= user.email %>
                </li>
                <li class="list-group-item"><strong>Rol:</strong>
                  <%= user.role || 'Usuario' %>
                </li>
                <li class="list-group-item"><strong>Bio:</strong>
                  <%= user.bio || 'Sin información' %>
                </li>
              </ul>
            </div>
          </div>

          <div class="card shadow-sm">
            <!-- Scroll horizontal de tarjetas -->
            <% if (user.role==='admin' && apartments.length>0 ) { %>
              <h2>Apartamentos añadidos por <%= user.name%></h2>

                <div class="d-flex overflow-auto gap-4 pb-3" style="scroll-snap-type: x mandatory;">
                                <%}%>

                  <% apartments.forEach(apartment=> { %>
                    <div class="flex-shrink-0" style="width: 300px; scroll-snap-align: start;">
                      <div class="card h-100 shadow-sm">
                        <a href="/apartments/<%= apartment._id %>">
                          <img src="<%= apartment.photos.find(p => p.isMain)?.url || '/img/default.jpg' %>"
                            class="card-img-top object-fit-cover" style="height: 200px;" alt="Imagen principal">
                        </a>
                        <div class="card-body">
                          <h5 class="card-title text-primary">
                            <%= apartment.title %>
                          </h5>
                          <p class="card-text small text-muted">
                            <%= apartment.location.municipality.nm %>, <%= apartment.location.province.nm %>
                          </p>
                          <p class="card-text fw-bold mb-2">
                            <%= apartment.price.toLocaleString() %>€
                          </p>
                          <div class="d-flex justify-content-between mb-3 small">
                            <span><i class="icon-bed me-1"></i>
                              <%= apartment.rooms %> habs
                            </span>
                            <span><i class="icon-bath me-1"></i>
                              <%= apartment.bathrooms %> baños
                            </span>
                          </div>
                          <a href="/apartments/<%= apartment._id %>" class="btn btn-outline-primary btn-sm w-100">Ver
                            detalles</a>
                        </div>
                      </div>
                    </div>
                    <% }); %>
                </div>
          </div>
          <div class="card shadow-sm">
            <% if (reservations.length>0 ) { %>
              <h2>Últimas reservas de <%= user.name%></h2>
            <div class="table-responsive">
              <table class="table table-hover align-middle text-center mb-0">
                <thead class="table-dark">
                  <tr>
                    <th>#</th>
                    <th>Huésped</th>
                    <th>Email</th>
                    <th>Apartamento</th>
                    <th>Usuario</th>
                    <th>Fechas</th>
                    <th>Total (€)</th>
                    <th>Estado</th>
                    <th>Pagado</th>
                    <th>Acciones</th>
                  </tr>
                </thead>
                <tbody>
                                <%}%>

                  <% reservations.forEach((reservation, index)=> { %>
                    <tr class="<%= new Date(reservation.endDate) < new Date() ? 'table-light' : 'table-success' %>">
                      <td>
                        <%= index + 1 %>
                      </td>
                      <td><strong>
                          <%= reservation.guestName %>
                        </strong></td>
                      <td>
                        <%= reservation.guestEmail %>
                      </td>
                      <td>
                        <% if (reservation.apartment?.title) { %>
                          <a href="/apartments/<%= reservation.apartment._id %>">
                            <%= reservation.apartment.title %>
                          </a>
                          <% } else { %>
                            <em>No disponible</em>
                            <% } %>
                      </td>
                      <td>
                        <%= reservation.user?.name || 'Desconocido' %>
                      </td>
                      <td>
                        <%= new Date(reservation.startDate).toLocaleDateString() %> –
                          <%= new Date(reservation.endDate).toLocaleDateString() %>
                      </td>
                      <td><span class="badge bg-secondary">€ <%= reservation.totalPrice.toFixed(2) %></span></td>
                      <td>
                        <span class="badge <%= reservation.status === 'confirmed' ? 'bg-success' : 'bg-danger' %>">
                          <%= reservation.status %>
                        </span>
                      </td>
                      <td>
                        <% if (reservation.paid) { %>
                          <i class="bi bi-check-circle-fill text-success fs-5"></i>
                          <% } else { %>
                            <i class="bi bi-x-circle-fill text-danger fs-5"></i>
                            <% } %>
                      </td>
                      <!-- Acciones -->
                      <td>
                        <div
                          class="d-flex flex-column flex-sm-row flex-wrap gap-1 justify-content-center align-items-center">
                          <!-- Editar -->
                          <a href="/reservations/edit/<%= reservation._id %>" class="btn btn-warning btn-sm px-2 py-1">
                            <i class="bi bi-pencil-square"></i>
                          </a>
                          <!-- Eliminar -->
                          <button class="btn btn-danger btn-sm px-2 py-1" data-bs-toggle="modal"
                            data-bs-target="#deleteReservationModal-<%= reservation._id %>">
                            <i class="bi bi-trash3"></i>
                          </button>
                          <!-- Marcar como Pagado -->
                          <% if (!reservation.paid) { %>
                            <button class="btn btn-success btn-sm px-2 py-1" data-bs-toggle="modal"
                              data-bs-target="#markPaidModal-<%= reservation._id %>">
                              <i class="bi bi-cash-coin"></i>
                            </button>
                            <% } %>
                        </div>
                        <!-- Modal Eliminar -->
                        <div class="modal fade" id="deleteReservationModal-<%= reservation._id %>" tabindex="-1"
                          aria-labelledby="deleteReservationLabel-<%= reservation._id %>" aria-hidden="true">
                          <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                              <div class="modal-header bg-danger text-white">
                                <h5 class="modal-title" id="deleteReservationLabel-<%= reservation._id %>">
                                  Confirmar eliminación
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                  aria-label="Cerrar"></button>
                              </div>
                              <div class="modal-body">
                                ¿Deseas eliminar la reserva de <strong>
                                  <%= reservation.guestName %>
                                </strong>?
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-secondary btn-sm"
                                  data-bs-dismiss="modal">Cancelar</button>
                                <form action="/reservations/delete/<%= reservation._id %>" method="POST">
                                  <button type="submit" class="btn btn-danger btn-sm">Sí, eliminar</button>
                                </form>
                              </div>
                            </div>
                          </div>
                        </div>
                        <!-- Modal Marcar Pagado -->
                        <div class="modal fade" id="markPaidModal-<%= reservation._id %>" tabindex="-1"
                          aria-labelledby="markPaidLabel-<%= reservation._id %>" aria-hidden="true">
                          <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                              <div class="modal-header bg-success text-white">
                                <h5 class="modal-title" id="markPaidLabel-<%= reservation._id %>">
                                  Confirmar pago
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                  aria-label="Cerrar"></button>
                              </div>
                              <div class="modal-body">
                                ¿Deseas marcar como pagada la reserva de <strong>
                                  <%= reservation.guestName %>
                                </strong>?
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-secondary btn-sm"
                                  data-bs-dismiss="modal">Cancelar</button>
                                <form action="/reservations/mark-paid/<%= reservation._id %>" method="POST">
                                  <button type="submit" class="btn btn-success btn-sm">Sí, marcar</button>
                                </form>
                              </div>
                            </div>
                          </div>
                        </div>
                      </td>
                    </tr>
                    <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </main>
      </div>
    </div>

    <%- include("partials/footer") %>