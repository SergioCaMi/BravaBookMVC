<!-- Incluye el encabezado de la página desde un archivo parcial -->
<%- include("partials/header") %>

<!-- Contenedor principal del contenido -->
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <!-- Tarjeta para el formulario de inicio de sesión -->
      <div class="card shadow-sm my-5">
        <div class="card-body">
          <!-- Título de la tarjeta -->
          <h3 class="card-title text-center mb-4">Iniciar Sesión</h3>

          <!-- Incluye mensajes parciales, como notificaciones o alertas -->
          <%- include("partials/mensajes") %>

          <!-- Formulario de inicio de sesión -->
          <form action="/login" method="POST" class="needs-validation" novalidate>
            <!-- Campo para el correo electrónico -->
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" name="email" id="email" class="form-control" placeholder="Email" required>
              <div class="invalid-feedback">Por favor, introduce un email válido.</div>
            </div>

            <!-- Campo para la contraseña -->
            <div class="mb-3">
              <label for="password" class="form-label">Contraseña</label>
              <div class="d-flex align-items-center gap-2">
                <input type="password" name="password" id="password" class="form-control" placeholder="Contraseña" required>
                <!-- Icono para mostrar/ocultar la contraseña -->
                <i class="bi bi-eye-slash text-secondary" style="font-size: 1.2rem; cursor: pointer;" id="togglePassword" title="Mostrar/ocultar contraseña"></i>
              </div>
              <div class="invalid-feedback">Por favor, introduce tu contraseña.</div>
            </div>

            <!-- Botón para enviar el formulario -->
            <div class="d-grid">
              <button type="submit" class="btn btn-success">Iniciar sesión</button>
            </div>
          </form>

          <!-- Enlace para redirigir a la página de registro -->
          <div class="mt-3 text-center">
            <a href="/register">¿No tienes cuenta? Regístrate</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Script para la validación del formulario y el toggle de la contraseña -->
<script>
  // Validación del formulario
  const form = document.querySelector(".needs-validation");
  if (form) {
    form.addEventListener("submit", function (event) {
      if (!form.checkValidity()) {
        event.preventDefault();
        event.stopPropagation();
      }
      form.classList.add("was-validated");
    });
  }

  // Toggle para mostrar/ocultar la contraseña
  const passwordInput = document.getElementById("password");
  const toggleIcon = document.getElementById("togglePassword");
  if (toggleIcon && passwordInput) {
    toggleIcon.addEventListener("click", function () {
      const type = passwordInput.type === "password" ? "text" : "password";
      passwordInput.type = type;
      this.classList.toggle("bi-eye");
      this.classList.toggle("bi-eye-slash");
    });
  }
</script>

<!-- Incluye el pie de página desde un archivo parcial -->
<%- include("partials/footer") %>
