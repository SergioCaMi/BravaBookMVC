<!-- Incluye el encabezado de la página desde un archivo parcial, pasando el título como variable -->
<%- include("partials/header", { title }) %>

<!-- Incluye mensajes parciales, como notificaciones o alertas -->
<%- include("partials/mensajes") %>

<!-- Barra de navegación para el panel de administración -->
<nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm mb-4">
  <div class="container d-flex justify-content-between align-items-center">
    <!-- Contenedor para el avatar y la información del usuario -->
    <div class="d-flex align-items-center">
      <!-- Imagen del avatar del usuario -->
      <img src="/uploads/<%= currentUser.avatar %>" alt="Avatar de <%= currentUser.name %>"
        class="img-thumbnail rounded-circle me-3 shadow" style="width: 60px; height: 60px; object-fit: cover;">
      <div>
        <!-- Nombre del usuario -->
        <h6 class="mb-0 fw-bold text-primary"><%= currentUser.name %></h6>
        <!-- Rol del usuario -->
        <small class="text-uppercase text-muted">Administrador</small><br>
        <!-- Correo electrónico del usuario -->
        <small class="text-muted"><%= currentUser.email %></small>
      </div>
    </div>
    <!-- Texto del panel de administración -->
    <span class="navbar-text fw-semibold text-secondary d-none d-md-inline">Panel de Administración</span>
  </div>
</nav>

<!-- Panel de acciones con diferentes tarjetas -->
<div class="container">
  <div class="row row-cols-1 row-cols-md-2 g-4 justify-content-center">
    <!-- Tarjeta para listado de usuarios -->
    <div class="col">
      <div class="card border-0 shadow rounded-4 h-100">
        <!-- Imagen de la tarjeta -->
        <img src="/img/usersList.jpg" class="card-img-top rounded-top-4" alt="Listado de usuarios"
          style="height: 200px; object-fit: cover;">
        <div class="card-body d-flex flex-column">
          <!-- Título de la tarjeta -->
          <h5 class="card-title text-dark fw-semibold">Usuarios</h5>
          <!-- Descripción de la tarjeta -->
          <p class="card-text text-muted small">Consulta y gestiona todos los usuarios disponibles.</p>
          <!-- Enlace para ver usuarios -->
          <a href="/admin/users" class="btn btn-outline-primary mt-auto w-100">Ver usuarios</a>
        </div>
      </div>
    </div>

    <!-- Tarjeta para crear un nuevo apartamento -->
    <div class="col">
      <div class="card border-0 shadow rounded-4 h-100">
        <!-- Imagen de la tarjeta -->
        <img src="/img/createNew.jpg" class="card-img-top rounded-top-4" alt="Crear nuevo apartamento"
          style="height: 200px; object-fit: cover;">
        <div class="card-body d-flex flex-column">
          <!-- Título de la tarjeta -->
          <h5 class="card-title text-dark fw-semibold">Crear un nuevo apartamento</h5>
          <!-- Descripción de la tarjeta -->
          <p class="card-text text-muted small">Añade un nuevo apartamento al sistema.</p>
          <!-- Enlace para crear un nuevo apartamento -->
          <a href="/admin/apartment/new" class="btn btn-outline-primary mt-auto w-100">Crear apartamento</a>
        </div>
      </div>
    </div>

    <!-- Tarjeta para editar apartamentos -->
    <div class="col">
      <div class="card border-0 shadow rounded-4 h-100">
        <!-- Imagen de la tarjeta -->
        <img src="/img/edit.jpg" class="card-img-top rounded-top-4" alt="Editar apartamentos"
          style="height: 200px; object-fit: cover;">
        <div class="card-body d-flex flex-column">
          <!-- Título de la tarjeta -->
          <h5 class="card-title text-dark fw-semibold">Apartamentos</h5>
          <!-- Descripción de la tarjeta -->
          <p class="card-text text-muted small">Consulta y gestiona todos los apartamentos disponibles.</p>
          <!-- Enlace para ver apartamentos -->
          <a href="/admin/home" class="btn btn-outline-primary mt-auto w-100">Ver apartamentos</a>
        </div>
      </div>
    </div>

    <!-- Tarjeta para listado de reservas -->
    <div class="col">
      <div class="card border-0 shadow rounded-4 h-100">
        <!-- Imagen de la tarjeta -->
        <img src="/img/reservationsList.jpg" class="card-img-top rounded-top-4" alt="Listado de reservas"
          style="height: 200px; object-fit: cover;">
        <div class="card-body d-flex flex-column">
          <!-- Título de la tarjeta -->
          <h5 class="card-title text-dark fw-semibold">Reservas</h5>
          <!-- Descripción de la tarjeta -->
          <p class="card-text text-muted small">Revisa y gestiona todas las reservas realizadas por los usuarios.</p>
          <!-- Enlace para ver reservas -->
          <a href="/admin/reservations" class="btn btn-outline-primary mt-auto w-100">Ver reservas</a>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Incluye el pie de página desde un archivo parcial -->
<%- include("partials/footer") %>
