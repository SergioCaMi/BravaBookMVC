<%- include("partials/header") %>

<%- include("partials/mensajes") %>

<div id="heroCarousel" class="carousel slide position-relative w-100" data-bs-ride="carousel" data-bs-interval="5000">

  <div class="carousel-indicators">
    <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active"></button>
    <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1"></button>
    <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2"></button>
  </div>

  <div class="carousel-inner">
    <div class="carousel-item active">
      <div class="hero-slide position-relative" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.6)), url('/img/hero_bg_1.jpg'); height: 110vh; background-size: cover; background-position: center; background-attachment: fixed;"></div>
    </div>
    <div class="carousel-item">
      <div class="hero-slide position-relative" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.6)), url('/img/hero_bg_2.jpg'); height: 110vh; background-size: cover; background-position: center; background-attachment: fixed;"></div>
    </div>
    <div class="carousel-item">
      <div class="hero-slide position-relative" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.6)), url('/img/hero_bg_3.jpg'); height: 110vh; background-size: cover; background-position: center; background-attachment: fixed;"></div>
    </div>
  </div>

  <div class="position-absolute top-50 start-50 translate-middle w-100 px-3" style="max-width: 1200px; z-index: 10; transform: translate(-50%, -40%);">
    <div class="container text-white text-center">
      <div class="row justify-content-center">
        <div class="col-12 col-xl-11">
          <div class="hero-content-card backdrop-blur rounded-4 p-4 p-md-5 shadow-lg border border-light border-opacity-25"
               style="background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px); animation: fadeInUp 1s ease-out;">

            <div class="hero-title-container mb-4">
              <h1 class="display-4 display-md-3 fw-bold mb-3 text-shadow"
                  style="animation: fadeInDown 1s ease-out 0.3s both; text-shadow: 2px 2px 4px rgba(0,0,0,0.5);">
                La forma más fácil de encontrar tu lugar perfecto
              </h1>
              <p class="lead fs-5 mb-3 text-light"
                  style="animation: fadeInUp 1s ease-out 0.6s both;">
                Descubre apartamentos únicos en los mejores destinos
              </p>
            </div>

            <form id="busquedaForm" action="/apartments/search" method="GET" onsubmit="buscarApartamentos(event)"
                  class="search-form p-3 p-md-4 rounded-3 shadow-lg"
                  style="background: rgba(255, 255, 255, 0.95); animation: slideInUp 1s ease-out 0.9s both;">

              <div class="row g-3 mb-3">
                <div class="col-12 col-md-4">
                  <label for="provinceSelect" class="form-label fw-semibold text-dark mb-1">
                    <i class="bi bi-geo-alt-fill text-primary me-2"></i>Provincia
                  </label>
                  <select id="provinceSelect" class="form-select form-select-lg border-0 shadow-sm rounded-3 transition-all">
                    <option value="">Selecciona provincia</option>
                  </select>
                </div>

                <div class="col-12 col-md-4">
                  <label for="municipalitySelect" class="form-label fw-semibold text-dark mb-1">
                    <i class="bi bi-building text-primary me-2"></i>Municipio
                  </label>
                  <select id="municipalitySelect" class="form-select form-select-lg border-0 shadow-sm rounded-3 transition-all">
                    <option value="">Selecciona municipio</option>
                  </select>
                </div>

                <div class="col-12 col-md-4">
                  <label for="maxGuests" class="form-label fw-semibold text-dark mb-1">
                    <i class="bi bi-people-fill text-primary me-2"></i>Huéspedes
                  </label>
                  <input type="number" name="maxGuests" id="maxGuests"
                         class="form-control form-control-lg border-0 shadow-sm rounded-3 transition-all"
                         min="1" placeholder="Número de huéspedes">
                </div>

                <input type="hidden" name="municipality[id]" id="municipalityIdInput">
                <input type="hidden" name="municipality[nm]" id="municipalityNameInput">
                <input type="hidden" name="province[id]" id="provinceIdInput">
                <input type="hidden" name="province[nm]" id="provinceNameInput">
              </div>

              <div class="row g-3 mb-3">
                <div class="col-12 col-md-4">
                  <label for="minPrice" class="form-label fw-semibold text-dark mb-1">
                    <i class="bi bi-currency-euro text-success me-2"></i>Precio Mínimo
                  </label>
                  <input type="number" name="minPrice" id="minPrice"
                         class="form-control form-control-lg border-0 shadow-sm rounded-3 transition-all"
                         min="0" step="1" placeholder="Desde €">
                </div>

                <div class="col-12 col-md-4">
                  <label for="maxPrice" class="form-label fw-semibold text-dark mb-1">
                    <i class="bi bi-currency-euro text-success me-2"></i>Precio Máximo
                  </label>
                  <input type="number" name="maxPrice" id="maxPrice"
                         class="form-control form-control-lg border-0 shadow-sm rounded-3 transition-all"
                         min="0" step="1" placeholder="Hasta €">
                </div>

                <div class="col-12 col-md-4">
                  <label for="dateRange" class="form-label fw-semibold text-dark mb-1">
                    <i class="bi bi-calendar-range text-info me-2"></i>Fechas
                  </label>
                  <input type="text" id="dateRange" name="dateRange"
                         class="form-control form-control-lg border-0 shadow-sm rounded-3 transition-all"
                         readonly placeholder="Selecciona fechas">
                  <input type="hidden" id="startDate" name="startDate">
                  <input type="hidden" name="endDate" id="endDate">
                </div>
              </div>

              <div class="row g-3 mb-4">
                <div class="col-12 col-lg-8">
                  <label class="form-label fw-semibold text-dark mb-2 d-block">
                    <i class="bi bi-gear-fill text-warning me-2"></i>Servicios incluidos
                  </label>
                  <div class="row g-2">
                    <div class="col-6 col-lg-4">
                      <div class="service-checkbox p-2 rounded-3 border border-light-subtle transition-all">
                        <input type="checkbox" name="services.airConditioning" value="on"
                               class="form-check-input me-2" id="airConditioning">
                        <label class="form-check-label d-flex align-items-center" for="airConditioning">
                          <span class="service-icon bg-primary bg-gradient rounded-circle d-inline-flex align-items-center justify-content-center me-2"
                                 style="width: 24px; height: 24px;">
                            <i class="bi bi-snow text-white"></i>
                          </span>
                          <small class="fw-medium text-dark">Aire Acondicionado</small>
                        </label>
                      </div>
                    </div>

                    <div class="col-6 col-lg-4">
                      <div class="service-checkbox p-2 rounded-3 border border-light-subtle transition-all">
                        <input type="checkbox" name="services.heating" value="on"
                               class="form-check-input me-2" id="heating">
                        <label class="form-check-label d-flex align-items-center" for="heating">
                          <span class="service-icon bg-danger bg-gradient rounded-circle d-inline-flex align-items-center justify-content-center me-2"
                                 style="width: 24px; height: 24px;">
                            <i class="bi bi-fire text-white"></i>
                          </span>
                          <small class="fw-medium text-dark">Calefacción</small>
                        </label>
                      </div>
                    </div>

                    <div class="col-6 col-lg-4">
                      <div class="service-checkbox p-2 rounded-3 border border-light-subtle transition-all">
                        <input type="checkbox" name="services.accessibility" value="on"
                               class="form-check-input me-2" id="accessibility">
                        <label class="form-check-label d-flex align-items-center" for="accessibility">
                          <span class="service-icon bg-info bg-gradient rounded-circle d-inline-flex align-items-center justify-content-center me-2"
                                 style="width: 24px; height: 24px;">
                            <i class="bi bi-person-wheelchair text-white"></i>
                          </span>
                          <small class="fw-medium text-dark">Accesibilidad</small>
                        </label>
                      </div>
                    </div>

                    <div class="col-6 col-lg-4">
                      <div class="service-checkbox p-2 rounded-3 border border-light-subtle transition-all">
                        <input type="checkbox" name="services.television" value="on"
                               class="form-check-input me-2" id="television">
                        <label class="form-check-label d-flex align-items-center" for="television">
                          <span class="service-icon bg-secondary bg-gradient rounded-circle d-inline-flex align-items-center justify-content-center me-2"
                                 style="width: 24px; height: 24px;">
                            <i class="bi bi-tv text-white"></i>
                          </span>
                          <small class="fw-medium text-dark">Televisión</small>
                        </label>
                      </div>
                    </div>

                    <div class="col-6 col-lg-4">
                      <div class="service-checkbox p-2 rounded-3 border border-light-subtle transition-all">
                        <input type="checkbox" name="services.kitchen" value="on"
                               class="form-check-input me-2" id="kitchen">
                        <label class="form-check-label d-flex align-items-center" for="kitchen">
                          <span class="service-icon bg-warning bg-gradient rounded-circle d-inline-flex align-items-center justify-content-center me-2"
                                 style="width: 24px; height: 24px;">
                            <i class="bi bi-cup-hot text-white"></i>
                          </span>
                          <small class="fw-medium text-dark">Cocina</small>
                        </label>
                      </div>
                    </div>

                    <div class="col-6 col-lg-4">
                      <div class="service-checkbox p-2 rounded-3 border border-light-subtle transition-all">
                        <input type="checkbox" name="services.internet" value="on"
                               class="form-check-input me-2" id="internet">
                        <label class="form-check-label d-flex align-items-center" for="internet">
                          <span class="service-icon bg-success bg-gradient rounded-circle d-inline-flex align-items-center justify-content-center me-2"
                                 style="width: 24px; height: 24px;">
                            <i class="bi bi-wifi text-white"></i>
                          </span>
                          <small class="fw-medium text-dark">Internet</small>
                        </label>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="col-12 col-lg-4">
                  <label for="sortPrice" class="form-label fw-semibold text-dark mb-1">
                    <i class="bi bi-sort-numeric-down text-primary me-2"></i>Ordenar por precio
                  </label>
                  <select id="sortPrice" class="form-select form-select-lg border-0 shadow-sm rounded-3 transition-all" name="sortPrice">
                    <option value="">Selecciona orden</option>
                    <option value="1">Precio: Menor a Mayor</option>
                    <option value="-1">Precio: Mayor a Menor</option>
                  </select>
                </div>
              </div>

              <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg py-3 rounded-pill fw-bold text-uppercase tracking-wide shadow-lg transition-all hover-lift">
                  <i class="bi bi-search me-2"></i>Buscar Apartamentos
                </button>
              </div>
            </form>

            <div class="ai-search-section mt-4 pt-3 border-top border-light border-opacity-50">
              <div class="text-center mb-3">
                <h4 class="text-white fw-bold mb-2">
                  <i class="bi bi-robot text-warning me-2"></i>
                  Búsqueda Inteligente con IA
                </h4>
                <p class="text-light mb-0"><small>Describe lo que buscas y nuestra IA encontrará el apartamento perfecto</small></p>
              </div>

              <form action="/apartments/search" method="POST" class="ai-form">
                <div class="row justify-content-center">
                  <div class="col-12 col-lg-8">
                    <div class="input-group input-group-lg shadow-lg">
                      <span class="input-group-text bg-warning border-0 rounded-start-pill">
                        <i class="bi bi-magic text-dark"></i>
                      </span>
                      <input type="text" name="query"
                             class="form-control border-0 rounded-end-pill transition-all"
                             placeholder="Ej: Busco apartamento barato con wifi en Almería cerca de la playa"
                             required>
                    </div>
                  </div>
                  <div class="col-12 col-lg-4 mt-3 mt-lg-0">
                    <button type="submit" class="btn btn-warning btn-lg w-100 rounded-pill fw-bold shadow-lg transition-all hover-lift">
                      <i class="bi bi-sparkles me-2"></i>Buscar con IA
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="recommended-section py-5 py-md-6" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
  <div class="container-fluid px-3 px-md-5">
    <div class="row mb-5 align-items-center">
      <div class="col-12 col-lg-6 text-center text-lg-start mb-3 mb-lg-0">
        <div class="section-header">
          <span class="badge bg-primary bg-gradient px-3 py-2 rounded-pill mb-3 fw-medium">
            <i class="bi bi-star-fill me-1"></i>Destacados
          </span>
          <h2 class="display-5 fw-bold text-dark mb-2">Apartamentos Recomendados</h2>
          <p class="text-muted fs-5 mb-0">Los mejores apartamentos seleccionados especialmente para ti</p>
        </div>
      </div>
      <div class="col-12 col-lg-6 text-center text-lg-end">
        <div class="action-buttons">
          <a href="/seeApartments" class="btn btn-primary btn-lg rounded-pill px-4 py-2 me-2 mb-2 shadow-sm transition-all hover-lift">
            <i class="bi bi-grid-3x3-gap-fill me-2"></i>Ver Todos
          </a>
          <a href="/map" class="btn btn-outline-primary btn-lg rounded-pill px-4 py-2 mb-2 shadow-sm transition-all hover-lift">
            <i class="bi bi-map me-2"></i>Ver Mapa
          </a>
        </div>
      </div>
    </div>

    <div class="apartments-carousel position-relative">
      <div class="d-flex overflow-auto gap-4 pb-4 px-2"
           style="scroll-snap-type: x mandatory; scrollbar-width: thin;">
        <% apartments.slice(0, 15).forEach((apartment, index) => { %>
          <div class="apartment-card-wrapper flex-shrink-0"
               style="width: 320px; scroll-snap-align: start; animation: slideInUp 0.6s ease-out <%= index * 0.1 %>s both;">
            <div class="apartment-card card border-0 shadow-lg rounded-4 h-100 overflow-hidden transition-all hover-lift">
              <div class="card-img-container position-relative overflow-hidden">
                <a href="/apartments/<%= apartment._id %>" class="d-block">
                  <img src="<%= apartment.photos.find(p => p.isMain)?.url || '/img/default.jpg' %>"
                       class="card-img-top transition-all"
                       style="height: 220px; object-fit: cover; transition: transform 0.3s ease;"
                       alt="<%= apartment.title %>">
                  <div class="image-overlay position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center opacity-0 transition-all">
                    <span class="btn btn-light btn-lg rounded-circle shadow-lg">
                      <i class="bi bi-eye-fill"></i>
                    </span>
                  </div>
                </a>

                <div class="position-absolute top-0 end-0 m-3">
                  <span class="badge bg-primary bg-gradient px-3 py-2 rounded-pill shadow-sm">
                    <i class="bi bi-star-fill me-1"></i>Destacado
                  </span>
                </div>

                <div class="position-absolute bottom-0 start-0 m-3">
                  <span class="badge bg-success bg-gradient px-3 py-2 rounded-pill shadow-lg fs-6 fw-bold">
                    <%= apartment.price.toLocaleString() %>€
                  </span>
                </div>
              </div>

              <div class="card-body p-4 d-flex flex-column">
                <div class="mb-3">
                  <h5 class="card-title text-dark mb-2 fw-bold lh-sm">
                    <%= apartment.title %>
                  </h5>
                  <p class="text-muted mb-0 d-flex align-items-center">
                    <i class="bi bi-geo-alt-fill text-primary me-2"></i>
                    <small><%= apartment.location.municipality.nm %>, <%= apartment.location.province.nm %></small>
                  </p>
                </div>

                <div class="apartment-details d-flex justify-content-between mb-3 p-2 bg-light rounded-3">
                  <div class="detail-item text-center">
                    <i class="bi bi-door-closed text-primary d-block mb-1"></i>
                    <small class="fw-medium text-dark"><%= apartment.rooms %> habs</small>
                  </div>
                  <div class="detail-item text-center">
                    <i class="bi bi-droplet text-info d-block mb-1"></i>
                    <small class="fw-medium text-dark"><%= apartment.bathrooms %> baños</small>
                  </div>
                  <div class="detail-item text-center">
                    <i class="bi bi-people text-success d-block mb-1"></i>
                    <small class="fw-medium text-dark"><%= apartment.maxGuests || 'N/A' %> huésp.</small>
                  </div>
                </div>

                <% const s = apartment.services; %>
                <div class="services-icons d-flex flex-wrap gap-2 mb-4">
                  <% if (s.airConditioning) { %>
                    <span class="service-badge badge bg-primary bg-gradient rounded-pill px-2 py-1"
                          data-bs-toggle="tooltip" title="Aire acondicionado">
                      <i class="bi bi-snow"></i>
                    </span>
                  <% } %>
                  <% if (s.heating) { %>
                    <span class="service-badge badge bg-danger bg-gradient rounded-pill px-2 py-1"
                          data-bs-toggle="tooltip" title="Calefacción">
                      <i class="bi bi-fire"></i>
                    </span>
                  <% } %>
                  <% if (s.accessibility) { %>
                    <span class="service-badge badge bg-info bg-gradient rounded-pill px-2 py-1"
                          data-bs-toggle="tooltip" title="Accesibilidad">
                      <i class="bi bi-person-wheelchair"></i>
                    </span>
                  <% } %>
                  <% if (s.television) { %>
                    <span class="service-badge badge bg-secondary bg-gradient rounded-pill px-2 py-1"
                          data-bs-toggle="tooltip" title="Televisión">
                      <i class="bi bi-tv"></i>
                    </span>
                  <% } %>
                  <% if (s.kitchen) { %>
                    <span class="service-badge badge bg-warning bg-gradient rounded-pill px-2 py-1"
                          data-bs-toggle="tooltip" title="Cocina">
                      <i class="bi bi-cup-hot"></i>
                    </span>
                  <% } %>
                  <% if (s.internet) { %>
                    <span class="service-badge badge bg-success bg-gradient rounded-pill px-2 py-1"
                          data-bs-toggle="tooltip" title="Internet">
                      <i class="bi bi-wifi"></i>
                    </span>
                  <% } %>
                </div>

                <a href="/apartments/<%= apartment._id %>"
                   class="btn btn-primary btn-lg w-100 mt-auto rounded-pill fw-bold transition-all hover-lift shadow-sm">
                  <i class="bi bi-arrow-right-circle me-2"></i>Ver Detalles
                </a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>

      <div class="scroll-indicator text-center mt-3">
        <small class="text-muted">
          <i class="bi bi-arrow-left-right me-1"></i>
          Desliza para ver más apartamentos
        </small>
      </div>
    </div>
  </div>
</div>

