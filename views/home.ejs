<%- include("partials/header") %>
  <%- include("partials/mensajes") %>
    <!-- Hero Section -->
    <div id="heroCarousel" class="carousel slide position-relative w-100" data-bs-ride="carousel">
      <!-- Imágenes del carrusel -->
      <div class="carousel-inner">
        <div class="carousel-item active">
          <div class="img overlay"
            style="background-image: url('/img/hero_bg_1.jpg'); height: 80vh; background-size: cover; background-position: center;">
          </div>
        </div>
        <div class="carousel-item">
          <div class="img overlay"
            style="background-image: url('/img/hero_bg_2.jpg'); height: 80vh; background-size: cover; background-position: center;">
          </div>
        </div>
        <div class="carousel-item">
          <div class="img overlay"
            style="background-image: url('/img/hero_bg_3.jpg'); height: 80vh; background-size: cover; background-position: center;">
          </div>
        </div>
      </div>
      <!-- Contenido fijo encima del carrusel -->
      <div class="position-absolute top-50 start-50 translate-middle w-100 px-3" style="max-width: 960px;">
        <div class="container text-white text-center">
          <div class="row justify-content-center">
            <div class="col-12 col-lg-12 bg-dark bg-opacity-75 p-3 p-md-4 rounded">
              <h1 class="display-6 display-md-4 fw-bold mb-3 mb-md-4">La forma más fácil de encontrar tu lugar para lo
                que
                necesites</h1>
              <!-- Formulario de búsqueda -->
              <form action="/apartments/search" method="GET" onsubmit="updateHiddenFields()">
                <!-- *** Fila 1 *** -->
                <div class="row g-2 g-md-3 mb-2 mb-md-3">
                  <div class="col-12 col-md-4">
                    <label for="provinceSelect" class="form-label small mb-1">Selecciona una provincia:</label>
                    <select id="provinceSelect" class="form-control form-select">
                      <option value="">-- Selecciona una provincia --</option>
                    </select>
                  </div>
                  <div class="col-12 col-md-4">
                    <label for="municipalitySelect" class="form-label small mb-1">Selecciona un municipio:</label>
                    <select id="municipalitySelect" class="form-control form-select">
                      <option value="">-- Selecciona un municipio --</option>
                    </select>
                  </div>
                  <input type="hidden" name="municipality[id]" id="municipalityIdInput">
                  <input type="hidden" name="municipality[nm]" id="municipalityNameInput">
                  <input type="hidden" name="province[id]" id="provinceIdInput">
                  <input type="hidden" name="province[nm]" id="provinceNameInput">
                  <div class="col-12 col-md-4">
                    <label for="maxGuests" class="form-label small mb-1">Capacidad de huéspedes:</label>
                    <input type="number" name="maxGuests" id="maxGuests" class="form-control" min="1">
                  </div>
                </div>
                <!-- *** Fila 2 *** -->
                <div class="row g-2 g-md-3 mb-2 mb-md-4">
                  <div class="col-12 col-md-6">
                    <label for="minPrice" class="form-label small mb-1">Precio mínimo por noche (€):</label>
                    <input type="number" name="minPrice" id="minPrice" class="form-control" min="0" step="10">
                  </div>
                  <div class="col-12 col-md-6">
                    <label for="maxPrice" class="form-label small mb-1">Precio máximo por noche (€):</label>
                    <input type="number" name="maxPrice" id="maxPrice" class="form-control" min="0" step="10">
                  </div>
                </div>
                <!-- *** Fila 3 *** -->
                <div class="row g-2 g-md-3 mb-2 mb-md-4 align-items-end">
                  <div class="col-12 col-md-6">
                    <label for="dateRange" class="form-label small mb-1">Selecciona el rango de fechas:</label>
                    <input type="text" id="dateRange" name="dateRange" class="form-control" readonly />
                  </div>
                  <div class="col-12 col-md-6">
                    <label for="sortPrice" class="form-label">Ordenar por precio:</label>
                    <select id="sortPrice" class="form-select" name="sortPrice">
                      <option value="">-- Selecciona orden --</option>
                      <option value="1">Precio ascendente</option>
                      <option value="-1">Precio descendente</option>
                    </select>
                  </div>
                  <input type="hidden" id="startDate" name="startDate" />
                  <input type="hidden" name="endDate" id="endDate" />
                </div>




                <!-- *** Fila 4 - Servicios *** -->
                <div class="mb-3 mb-md-4">
                  <label class="form-label small mb-2 d-block">Servicios:</label>
                  <div class="row g-2">
                    <div class="col-6 col-md-4">
                      <div class="form-check d-flex align-items-center">
                        <input type="checkbox" name="services.airConditioning" value="on" class="form-check-input"
                          id="airConditioning">
                        <label class="ms-2 form-check-label d-flex align-items-center" for="airConditioning">
                          <span
                            class="bg-white rounded-circle d-inline-flex align-items-center justify-content-center me-1 me-md-2"
                            style="width: 20px; height: 20px;">
                            <i class="bi bi-snow text-black"></i>
                          </span>
                          <small><span>Aire Acondicionado</span></small>
                        </label>
                      </div>
                    </div>
                    <div class="col-6 col-md-4">
                      <div class="form-check d-flex align-items-center">
                        <input type="checkbox" name="services.heating" value="on" class="form-check-input" id="heating">
                        <label class="ms-2 form-check-label d-flex align-items-center" for="heating">
                          <span
                            class="bg-white rounded-circle d-inline-flex align-items-center justify-content-center me-1 me-md-2"
                            style="width: 20px; height: 20px;">
                            <i class="bi bi-fire text-black"></i>
                          </span>
                          <small><span>Calefacción</span></small>
                        </label>
                      </div>
                    </div>
                    <div class="col-6 col-md-4">
                      <div class="form-check d-flex align-items-center">
                        <input type="checkbox" name="services.accessibility" value="on" class="form-check-input"
                          id="accessibility">
                        <label class="ms-2 form-check-label d-flex align-items-center" for="accessibility">
                          <span
                            class="bg-white rounded-circle d-inline-flex align-items-center justify-content-center me-1 me-md-2"
                            style="width: 20px; height: 20px;">
                            <i class="bi bi-person-wheelchair text-black"></i>
                          </span>
                          <small><span>Accesibilidad</span></small>
                        </label>
                      </div>
                    </div>
                    <div class="col-6 col-md-4">
                      <div class="form-check d-flex align-items-center">
                        <input type="checkbox" name="services.television" value="on" class="form-check-input"
                          id="television">
                        <label class="ms-2 form-check-label d-flex align-items-center" for="television">
                          <span
                            class="bg-white rounded-circle d-inline-flex align-items-center justify-content-center me-1 me-md-2"
                            style="width: 20px; height: 20px;">
                            <i class="bi bi-tv text-black"></i>
                          </span>
                          <small><span>Televisión</span></small>
                        </label>
                      </div>
                    </div>
                    <div class="col-6 col-md-4">
                      <div class="form-check d-flex align-items-center">
                        <input type="checkbox" name="services.kitchen" value="on" class="form-check-input" id="kitchen">
                        <label class="ms-2 form-check-label d-flex align-items-center" for="kitchen">
                          <span
                            class="bg-white rounded-circle d-inline-flex align-items-center justify-content-center me-1 me-md-2"
                            style="width: 20px; height: 20px;">
                            <i class="bi bi-cup-hot text-black"></i>
                          </span>
                          <small><span>Cocina</span></small>
                        </label>
                      </div>
                    </div>
                    <div class="col-6 col-md-4">
                      <div class="form-check d-flex align-items-center">
                        <input type="checkbox" name="services.internet" value="on" class="form-check-input"
                          id="internet">
                        <label class="ms-2 form-check-label d-flex align-items-center" for="internet">
                          <span
                            class="bg-white rounded-circle d-inline-flex align-items-center justify-content-center me-1 me-md-2"
                            style="width: 20px; height: 20px;">
                            <i class="bi bi-wifi text-black"></i>
                          </span>
                          <small><span>Internet</span></small>
                        </label>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- Botón submit -->
                <div class="d-grid">
                  <button type="submit" class="btn btn-primary py-2">Buscar apartamentos</button>
                </div>
              </form>
              <!-- Fin del formulario -->
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Sección de propiedades populares -->
    <div class="section py-4 py-md-5 bg-light">
      <div class="container-fluid px-3 px-md-5">
        <div class="row mb-3 mb-md-4 align-items-center">
          <div class="col-12 col-lg-6 text-center text-lg-start mb-2 mb-lg-0">
            <h2 class="text-primary fw-bold fs-5 fs-md-4">Apartamentos recomendados</h2>
          </div>
          <div class="col-12 col-lg-6 text-center text-lg-end">
            <a href="/seeApartments" class="btn btn-primary text-white py-2 px-4">Ver todos</a>
          </div>
        </div>
        <!-- Scroll horizontal de tarjetas -->
        <div class="d-flex overflow-auto gap-3 pb-3" style="scroll-snap-type: x mandatory;">
          <% apartments.forEach(apartment=> { %>
            <div class="flex-shrink-0" style="width: 280px; scroll-snap-align: start;">
              <div class="card h-100 shadow-sm d-flex flex-column" style="height: auto;">
                <a href="/apartments/<%= apartment._id %>">
                  <img src="<%= apartment.photos.find(p => p.isMain)?.url || '/img/default.jpg' %>"
                    class="card-img-top object-fit-cover" style="height: 180px;" alt="Imagen principal">
                </a>
                <div class="card-body d-flex flex-column p-3">
                  <h5 class="card-title text-primary fs-6">
                    <%= apartment.title %>
                  </h5>
                  <p class="card-text small text-muted">
                    <%= apartment.location.municipality.nm %>, <%= apartment.location.province.nm %>
                  </p>
                  <p class="card-text fw-bold mb-2">
                    <%= apartment.price.toLocaleString() %>€
                  </p>
                  <div class="d-flex justify-content-between mb-2 small">
                    <span><i class="bi bi-door-closed me-1"></i>
                      <%= apartment.rooms %> habs
                    </span>
                    <span><i class="bi bi-droplet me-1"></i>
                      <%= apartment.bathrooms %> baños
                    </span>
                  </div>
                  <% const s=apartment.services; %>
                    <div class="mb-3 d-flex flex-wrap gap-2 small text-secondary">
                      <% if (s.airConditioning) { %>
                        <span data-bs-toggle="tooltip" title="Aire acondicionado">
                          <i class="bi bi-snow text-black me-1"></i>
                        </span>
                        <% } %>
                          <% if (s.heating) { %>
                            <span data-bs-toggle="tooltip" title="Calefacción">
                              <i class="bi bi-fire text-black me-1"></i>
                            </span>
                            <% } %>
                              <% if (s.accessibility) { %>
                                <span data-bs-toggle="tooltip" title="Accesibilidad">
                                  <i class="bi bi-person-wheelchair text-black me-1"></i>
                                </span>
                                <% } %>
                                  <% if (s.television) { %>
                                    <span data-bs-toggle="tooltip" title="Televisión">
                                      <i class="bi bi-tv text-black me-1"></i>
                                    </span>
                                    <% } %>
                                      <% if (s.kitchen) { %>
                                        <span data-bs-toggle="tooltip" title="Cocina">
                                          <i class="bi bi-cup-hot text-black me-1"></i>
                                        </span>
                                        <% } %>
                                          <% if (s.internet) { %>
                                            <span data-bs-toggle="tooltip" title="Internet">
                                              <i class="bi bi-wifi text-black me-1"></i>
                                            </span>
                                            <% } %>
                    </div>
                    <a href="/apartments/<%= apartment._id %>" class="btn btn-outline-primary btn-sm w-100 mt-auto">
                      Ver detalles
                    </a>
                </div>
              </div>
            </div>
            <% }) %>
        </div>
      </div>
    </div>
    <script>
      var tooltipTriggerList = [].slice.call(
        document.querySelectorAll('[data-bs-toggle="tooltip"]')
      );
      var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
      });


      $(document).ready(function () {
        $('#dateRange').daterangepicker({
          locale: {
            format: 'YYYY-MM-DD'
          },
          startDate: moment(), // Valor inicial
          endDate: moment().add(1, 'days'), // Valor inicial
          autoUpdateInput: false,
          ranges: {
            'Hoy': [moment(), moment()],
            'Mañana': [moment().add(1, 'days'), moment().add(1, 'days')],
            'Próximos 7 días': [moment(), moment().add(6, 'days')]
          }
        }, function (start, end, label) {
          $('#startDate').val(start.format('YYYY-MM-DD'));
          $('#endDate').val(end.format('YYYY-MM-DD'));
        });

        $('#dateRange').on('apply.daterangepicker', function (ev, picker) {
          $('#startDate').val(picker.startDate.format('YYYY-MM-DD'));
          $('#endDate').val(picker.endDate.format('YYYY-MM-DD'));
        });
      });

    </script>
    <script src="js/municipiAndProvince.js"></script>
    <script src="js/dateRangePicker.js"></script>
    <%- include("partials/footer") %>