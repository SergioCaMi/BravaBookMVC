<!-- Incluye el encabezado de la página desde un archivo parcial -->
<%- include("partials/header") %>

<!-- CSS específico para contactUs -->
<link rel="stylesheet" href="/css/contactUs.css">

<!-- Hero section moderno -->
<div class="contact-hero position-relative overflow-hidden">
  <div class="hero-background position-absolute top-0 start-0 w-100 h-100"
       style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"></div>
  
  <!-- Partículas animadas de fondo -->
  <div class="particles-container position-absolute top-0 start-0 w-100 h-100">
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
  </div>
  
  <div class="hero-content position-relative py-5">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-8">
          <div class="hero-title text-white" style="animation: fadeInLeft 0.8s ease-out;">
            <div class="title-badge mb-3">
              <span class="badge bg-light text-primary px-4 py-2 rounded-pill fs-6 fw-medium">
                <i class="bi bi-envelope-heart me-2"></i>Contacta con Nosotros
              </span>
            </div>
            
            <h1 class="display-4 fw-bold mb-3">¿Necesitas Ayuda?</h1>
            <p class="lead mb-0 text-light">
              Estamos aquí para ayudarte con cualquier consulta sobre nuestros apartamentos y servicios
            </p>
          </div>
        </div>
        
        <div class="col-lg-4 text-center text-lg-end">
          <div class="hero-stats backdrop-blur rounded-4 p-4 shadow-lg border border-light border-opacity-25"
               style="background: rgba(255, 255, 255, 0.1); animation: slideInRight 0.8s ease-out 0.3s both;">
            <div class="stat-item mb-3">
              <div class="stat-icon bg-success bg-gradient rounded-circle d-flex align-items-center justify-content-center mx-auto mb-2"
                   style="width: 60px; height: 60px;">
                <i class="bi bi-headset text-white fs-3"></i>
              </div>
              <h4 class="text-white fw-bold mb-1">Soporte 24/7</h4>
              <p class="text-light small mb-0">Siempre disponibles</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Contenedor principal -->
<div class="contact-container py-5" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
  <div class="container">
    
    <!-- Información de contacto principal -->
    <div class="contact-info-section mb-5">
      <div class="section-wrapper backdrop-blur rounded-4 shadow-lg border border-light border-opacity-50 overflow-hidden"
           style="background: rgba(255, 255, 255, 0.95);">
        <div class="section-content p-5">
          <div class="section-header text-center mb-5">
            <h2 class="fw-bold text-dark mb-3" style="animation: fadeInUp 0.8s ease-out;">
              <i class="bi bi-building text-primary me-2"></i>
              Central BravaBook
            </h2>
            <p class="text-muted mb-0">Nuestra oficina principal donde comenzó todo</p>
          </div>
          
          <div class="row g-4">
            <!-- Dirección -->
            <div class="col-md-6 col-lg-3">
              <div class="contact-card h-100">
                <div class="contact-icon bg-primary">
                  <i class="bi bi-geo-alt"></i>
                </div>
                <h5>Dirección</h5>
                <p class="mb-2">
                  <strong>Av. Catalunya, 15</strong><br>
                  Sant Antoni de Calonge<br>
                  <span class="text-primary fw-bold">17252, Girona</span>
                </p>
                <small class="text-muted">Costa Brava, España</small>
              </div>
            </div>
            
            <!-- Teléfono -->
            <div class="col-md-6 col-lg-3">
              <div class="contact-card h-100">
                <div class="contact-icon bg-success">
                  <i class="bi bi-telephone"></i>
                </div>
                <h5>Teléfono</h5>
                <p class="mb-2">
                  <a href="tel:+34972661234" class="text-decoration-none">
                    <strong>+34 972 66 12 34</strong>
                  </a>
                </p>
                <small class="text-muted">Lun - Dom: 8:00 - 22:00</small>
              </div>
            </div>
            
            <!-- Email -->
            <div class="col-md-6 col-lg-3">
              <div class="contact-card h-100">
                <div class="contact-icon bg-info">
                  <i class="bi bi-envelope"></i>
                </div>
                <h5>Email</h5>
                <p class="mb-2">
                  <a href="mailto:info@bravabook.com" class="text-decoration-none">
                    <strong>info@bravabook.com</strong>
                  </a>
                </p>
                <small class="text-muted">Respuesta en 24h</small>
              </div>
            </div>
            
            <!-- Emergencias -->
            <div class="col-md-6 col-lg-3">
              <div class="contact-card h-100">
                <div class="contact-icon bg-danger">
                  <i class="bi bi-exclamation-triangle"></i>
                </div>
                <h5>Emergencias</h5>
                <p class="mb-2">
                  <a href="tel:+34972661235" class="text-decoration-none">
                    <strong>+34 972 66 12 35</strong>
                  </a>
                </p>
                <small class="text-muted">Disponible 24/7</small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row g-5">
      <!-- Formulario de contacto -->
      <div class="col-lg-8">
        <div class="contact-form-wrapper backdrop-blur rounded-4 shadow-lg border border-light border-opacity-50 overflow-hidden"
             style="background: rgba(255, 255, 255, 0.95);">
          
          <!-- Barra de progreso del formulario -->
          <div class="form-progress-bar position-relative">
            <div class="progress-background bg-light" style="height: 6px;"></div>
            <div class="progress-fill bg-gradient position-absolute top-0 start-0 h-100 transition-all"
                 style="width: 0%; background: linear-gradient(90deg, #667eea, #764ba2);"></div>
          </div>
          
          <div class="form-content p-5">
            <div class="form-header text-center mb-5">
              <h3 class="fw-bold text-dark mb-3" style="animation: fadeInUp 0.8s ease-out;">
                <i class="bi bi-chat-dots text-primary me-2"></i>
                Envíanos un Mensaje
              </h3>
              <p class="text-muted mb-0">Completa el formulario y te responderemos lo antes posible</p>
            </div>
            
            <form id="contactForm" class="needs-validation" novalidate>
              
              <!-- Sección 1: Información Personal -->
              <div class="form-section mb-4" data-section="1">
                <div class="section-header d-flex align-items-center mb-4">
                  <div class="section-icon bg-primary bg-gradient rounded-circle d-flex align-items-center justify-content-center me-3"
                       style="width: 40px; height: 40px;">
                    <i class="bi bi-person text-white"></i>
                  </div>
                  <div>
                    <h5 class="fw-bold text-dark mb-1">Información Personal</h5>
                    <p class="text-muted small mb-0">Datos para contactarte</p>
                  </div>
                </div>
                
                <div class="row g-4">
                  <div class="col-md-6">
                    <div class="form-floating">
                      <input type="text" id="name" name="name" class="form-control form-control-lg"
                             placeholder="Nombre completo" required>
                      <label for="name">
                        <i class="bi bi-person me-2"></i>Nombre completo
                      </label>
                      <div class="invalid-feedback">Por favor, introduce tu nombre.</div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-floating">
                      <input type="email" id="email" name="email" class="form-control form-control-lg"
                             placeholder="Correo electrónico" required>
                      <label for="email">
                        <i class="bi bi-envelope me-2"></i>Correo electrónico
                      </label>
                      <div class="invalid-feedback">Por favor, introduce un email válido.</div>
                    </div>
                  </div>
                </div>
                
                <div class="row g-4 mt-2">
                  <div class="col-md-6">
                    <div class="form-floating">
                      <input type="tel" id="phone" name="phone" class="form-control"
                             placeholder="Teléfono (opcional)">
                      <label for="phone">
                        <i class="bi bi-telephone me-2"></i>Teléfono (opcional)
                      </label>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-floating">
                      <select id="subject" name="subject" class="form-select" required>
                        <option value="">Selecciona un tema</option>
                        <option value="reserva">Consulta sobre reserva</option>
                        <option value="apartamento">Información de apartamento</option>
                        <option value="cancelacion">Cancelación</option>
                        <option value="problema">Problema técnico</option>
                        <option value="sugerencia">Sugerencia</option>
                        <option value="otro">Otro</option>
                      </select>
                      <label for="subject">
                        <i class="bi bi-tag me-2"></i>Tema de consulta
                      </label>
                      <div class="invalid-feedback">Por favor, selecciona un tema.</div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Sección 2: Mensaje -->
              <div class="form-section mb-4" data-section="2">
                <div class="section-header d-flex align-items-center mb-4">
                  <div class="section-icon bg-success bg-gradient rounded-circle d-flex align-items-center justify-content-center me-3"
                       style="width: 40px; height: 40px;">
                    <i class="bi bi-chat-text text-white"></i>
                  </div>
                  <div>
                    <h5 class="fw-bold text-dark mb-1">Tu Mensaje</h5>
                    <p class="text-muted small mb-0">Cuéntanos en qué podemos ayudarte</p>
                  </div>
                </div>
                
                <div class="form-floating">
                  <textarea id="message" name="message" class="form-control" style="height: 150px;"
                            placeholder="Escribe tu mensaje aquí..." required maxlength="1000"></textarea>
                  <label for="message">
                    <i class="bi bi-chat-text me-2"></i>Tu mensaje
                  </label>
                  <div class="invalid-feedback">Por favor, escribe tu mensaje.</div>
                  <div class="form-text">
                    <span id="messageCharCount">0</span>/1000 caracteres
                  </div>
                </div>
              </div>

              <!-- Botón de envío -->
              <div class="form-actions d-grid">
                <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5 hover-lift">
                  <i class="bi bi-send me-2"></i>Enviar Mensaje
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- Información adicional -->
      <div class="col-lg-4">
        <!-- Horarios -->
        <div class="info-card backdrop-blur rounded-4 shadow-lg border border-light border-opacity-50 mb-4"
             style="background: rgba(255, 255, 255, 0.95);">
          <div class="card-content p-4">
            <div class="card-header d-flex align-items-center mb-3">
              <div class="card-icon bg-warning bg-gradient rounded-circle d-flex align-items-center justify-content-center me-3"
                   style="width: 50px; height: 50px;">
                <i class="bi bi-clock text-white"></i>
              </div>
              <h5 class="fw-bold text-dark mb-0">Horarios de Atención</h5>
            </div>
            
            <div class="schedule-list">
              <div class="schedule-item d-flex justify-content-between py-2 border-bottom border-light">
                <span class="fw-medium">Lunes - Viernes</span>
                <span class="text-primary fw-bold">8:00 - 20:00</span>
              </div>
              <div class="schedule-item d-flex justify-content-between py-2 border-bottom border-light">
                <span class="fw-medium">Sábados</span>
                <span class="text-primary fw-bold">9:00 - 18:00</span>
              </div>
              <div class="schedule-item d-flex justify-content-between py-2 border-bottom border-light">
                <span class="fw-medium">Domingos</span>
                <span class="text-primary fw-bold">10:00 - 16:00</span>
              </div>
              <div class="schedule-item d-flex justify-content-between py-2">
                <span class="fw-medium text-danger">Emergencias</span>
                <span class="text-danger fw-bold">24/7</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Redes sociales -->
        <div class="info-card backdrop-blur rounded-4 shadow-lg border border-light border-opacity-50 mb-4"
             style="background: rgba(255, 255, 255, 0.95);">
          <div class="card-content p-4">
            <div class="card-header d-flex align-items-center mb-3">
              <div class="card-icon bg-info bg-gradient rounded-circle d-flex align-items-center justify-content-center me-3"
                   style="width: 50px; height: 50px;">
                <i class="bi bi-share text-white"></i>
              </div>
              <h5 class="fw-bold text-dark mb-0">Síguenos</h5>
            </div>
            
            <div class="social-links d-flex gap-3">
              <a href="#" class="social-link bg-primary">
                <i class="bi bi-facebook"></i>
              </a>
              <a href="#" class="social-link bg-info">
                <i class="bi bi-twitter"></i>
              </a>
              <a href="#" class="social-link bg-danger">
                <i class="bi bi-instagram"></i>
              </a>
              <a href="#" class="social-link bg-success">
                <i class="bi bi-whatsapp"></i>
              </a>
            </div>
            
            <p class="text-muted small mt-3 mb-0">
              Mantente al día con nuestras últimas ofertas y novedades
            </p>
          </div>
        </div>

        <!-- Información adicional -->
        <div class="info-card backdrop-blur rounded-4 shadow-lg border border-light border-opacity-50"
             style="background: rgba(255, 255, 255, 0.95);">
          <div class="card-content p-4">
            <div class="card-header d-flex align-items-center mb-3">
              <div class="card-icon bg-secondary bg-gradient rounded-circle d-flex align-items-center justify-content-center me-3"
                   style="width: 50px; height: 50px;">
                <i class="bi bi-info-circle text-white"></i>
              </div>
              <h5 class="fw-bold text-dark mb-0">¿Sabías que...?</h5>
            </div>
            
            <div class="info-list">
              <div class="info-item d-flex align-items-start mb-3">
                <i class="bi bi-check-circle text-success me-2 mt-1"></i>
                <small>Respondemos a todos los emails en menos de 24 horas</small>
              </div>
              <div class="info-item d-flex align-items-start mb-3">
                <i class="bi bi-check-circle text-success me-2 mt-1"></i>
                <small>Nuestro equipo habla español, inglés y francés</small>
              </div>
              <div class="info-item d-flex align-items-start mb-3">
                <i class="bi bi-check-circle text-success me-2 mt-1"></i>
                <small>Ofrecemos soporte técnico 24/7 para emergencias</small>
              </div>
              <div class="info-item d-flex align-items-start">
                <i class="bi bi-check-circle text-success me-2 mt-1"></i>
                <small>Más de 10 años de experiencia en Costa Brava</small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Mapa/Ubicación -->
    <div class="location-section mt-5">
      <div class="section-wrapper backdrop-blur rounded-4 shadow-lg border border-light border-opacity-50 overflow-hidden"
           style="background: rgba(255, 255, 255, 0.95);">
        <div class="section-content p-5">
          <div class="section-header text-center mb-5">
            <h3 class="fw-bold text-dark mb-3">
              <i class="bi bi-map text-primary me-2"></i>
              Nuestra Ubicación
            </h3>
            <p class="text-muted mb-0">Visítanos en el corazón de la Costa Brava</p>
          </div>
          
          <div class="row align-items-center">
            <div class="col-md-6">
              <div class="location-info">
                <div class="location-item d-flex align-items-start mb-4">
                  <div class="location-icon bg-primary bg-gradient rounded-circle d-flex align-items-center justify-content-center me-3"
                       style="width: 50px; height: 50px;">
                    <i class="bi bi-geo-alt text-white"></i>
                  </div>
                  <div>
                    <h6 class="fw-bold mb-1">Dirección Completa</h6>
                    <p class="mb-0">
                      Av. Catalunya, 15<br>
                      Calonge i Sant Antoni<br>
                      17252, Girona, España
                    </p>
                  </div>
                </div>
                
                <div class="location-item d-flex align-items-start mb-4">
                  <div class="location-icon bg-success bg-gradient rounded-circle d-flex align-items-center justify-content-center me-3"
                       style="width: 50px; height: 50px;">
                    <i class="bi bi-car-front text-white"></i>
                  </div>
                  <div>
                    <h6 class="fw-bold mb-1">Cómo Llegar</h6>
                    <p class="mb-0">
                      Parking gratuito disponible<br>
                      A 5 min de la playa<br>
                      Transporte público cercano
                    </p>
                  </div>
                </div>
                
                <div class="location-item d-flex align-items-start">
                  <div class="location-icon bg-info bg-gradient rounded-circle d-flex align-items-center justify-content-center me-3"
                       style="width: 50px; height: 50px;">
                    <i class="bi bi-clock text-white"></i>
                  </div>
                  <div>
                    <h6 class="fw-bold mb-1">Horario de Oficina</h6>
                    <p class="mb-0">
                      Lun-Vie: 8:00-20:00<br>
                      Sáb: 9:00-18:00<br>
                      Dom: 10:00-16:00
                    </p>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="col-md-6">
              <div class="map-placeholder bg-light rounded-3 d-flex align-items-center justify-content-center"
                   style="height: 300px; padding:0;">
                <iframe
                  src="https://www.google.com/maps?q=Av.+Catalunya,+15,+Calonge+i+Sant+Antoni,+17252,+Girona,+España&output=embed"
                  width="100%" height="100%" style="border:0; border-radius: 0.5rem;" allowfullscreen="" loading="lazy"
                  referrerpolicy="no-referrer-when-downgrade"></iframe>
              </div>
              <div class="text-center mt-2">
                <a href="https://www.google.com/maps/place/Av.+Catalunya,+15,+17252+Calonge,+Girona,+España" target="_blank" class="btn btn-outline-primary btn-sm mt-2">
                  <i class="bi bi-map me-1"></i>Ver en Google Maps
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

