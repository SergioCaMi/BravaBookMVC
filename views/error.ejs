<!DOCTYPE html>
<html lang="es">
<head>
  <!-- Define el tipo de documento y la configuraci√≥n b√°sica del HTML -->
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Error <%= status || '404' %> - P√°gina no encontrada</title>
  <!-- Estilos CSS para la p√°gina de error -->
  <style>
    /* Estilo base para todos los elementos */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }
    /* Estilo para el cuerpo de la p√°gina */
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: url('https://images.unsplash.com/photo-1663293761219-d8c9e5eef4c1?q=80&w=2071&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D') no-repeat center center fixed;
      background-size: cover;
      color: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      overflow-x: hidden;
      padding: 20px 0;
    }
    /* Estilo para el contenedor principal */
    .container {
      text-align: center;
      animation: fadeIn 1s ease-in-out;
      max-width: 90%;
      padding: 20px;
      background-color: rgba(0, 0, 0, 0.5);
      border-radius: 15px;
    }
    /* Estilo para el encabezado h1 */
    h1 {
      font-size: 7rem;
      margin-bottom: 0.2em;
      animation: float 3s ease-in-out infinite;
    }
    /* Estilo para los p√°rrafos */
    p {
      font-size: 1.5rem;
      margin-bottom: 1em;
    }
    /* Estilo para los enlaces */
    a {
      text-decoration: none;
      background: #fff;
      color: #2c5364;
      padding: 0.8em 1.5em;
      border-radius: 30px;
      font-weight: bold;
      transition: background 0.3s, transform 0.3s;
      display: inline-block;
      margin: 0.5em;
    }
    /* Efecto hover para los enlaces */
    a:hover {
      background: #e0e0e0;
      transform: scale(1.05);
    }

    /* Cards de opciones - PEQUE√ëAS */
    .options-section {
      margin-top: 1.5em;
      padding-top: 1.5em;
      border-top: 1px solid rgba(255, 255, 255, 0.3);
      animation: fadeIn 1.5s ease-in-out;
    }

    .options-title {
      font-size: 1rem;
      margin-bottom: 1em;
      color: #fff;
      opacity: 0.9;
    }

    .options-grid {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 0.8em;
      margin-top: 0.8em;
    }

    .option-card {
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 10px;
      padding: 0.8em 0.6em;
      text-align: center;
      transition: all 0.3s ease;
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      min-width: 100px;
      max-width: 120px;
      cursor: pointer;
    }

    .option-card:hover {
      background: rgba(255, 255, 255, 0.2);
      transform: translateY(-3px);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    .option-icon {
      font-size: 1.8rem;
      margin-bottom: 0.3em;
      display: block;
      opacity: 0.9;
    }

    .option-title {
      font-size: 0.8rem;
      font-weight: bold;
      margin-bottom: 0.2em;
      color: #fff;
      line-height: 1.2;
    }

    .option-description {
      font-size: 0.7rem;
      color: rgba(255, 255, 255, 0.7);
      line-height: 1.3;
      margin: 0;
      display: none;
    }

    /* Mostrar descripci√≥n solo en hover */
    .option-card:hover .option-description {
      display: block;
      animation: fadeIn 0.3s ease;
    }

    /* Bot√≥n secundario */
    .btn-secondary {
      background: rgba(255, 255, 255, 0.2);
      color: #fff;
      border: 2px solid rgba(255, 255, 255, 0.3);
      padding: 0.8em 1.5em;
      border-radius: 30px;
      font-weight: bold;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-block;
    }

    .btn-secondary:hover {
      background: rgba(255, 255, 255, 0.3);
      border-color: rgba(255, 255, 255, 0.5);
      transform: scale(1.05);
      color: #fff;
    }

    /* Animaci√≥n de flotaci√≥n para el encabezado h1 */
    @keyframes float {
      0%, 100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-10px);
      }
    }
    /* Animaci√≥n de aparici√≥n para el contenedor principal */
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: scale(0.95);
      }
      to {
        opacity: 1;
        transform: scale(1);
      }
    }
    /* Animaci√≥n de pulso para posibles elementos interactivos */
    @keyframes pulse {
      0%, 100% {
        opacity: 1;
        transform: scale(1);
      }
      50% {
        opacity: 0.85;
        transform: scale(1.05);
      }
    }

    /* Responsive para cards peque√±as */
    @media (max-width: 768px) {
      h1 {
        font-size: 5rem;
      }
      
      p {
        font-size: 1.2rem;
      }
      
      .container {
        padding: 15px;
        max-width: 95%;
      }
      
      .options-grid {
        gap: 0.6em;
      }
      
      .option-card {
        min-width: 80px;
        max-width: 100px;
        padding: 0.6em 0.4em;
      }
      
      .option-icon {
        font-size: 1.5rem;
      }
      
      .option-title {
        font-size: 0.75rem;
      }
      
      a, .btn-secondary {
        width: 100%;
        max-width: 300px;
        text-align: center;
        display: block;
        margin: 0.5em auto;
      }
    }

    @media (max-width: 480px) {
      h1 {
        font-size: 4rem;
      }
      
      p {
        font-size: 1rem;
      }
      
      .option-card {
        min-width: 70px;
        max-width: 85px;
        padding: 0.5em 0.3em;
      }
      
      .option-icon {
        font-size: 1.3rem;
        margin-bottom: 0.2em;
      }
      
      .option-title {
        font-size: 0.7rem;
      }
    }

    /* Iconos usando caracteres Unicode para mantener compatibilidad */
    .icon-search::before { content: 'üîç'; }
    .icon-home::before { content: 'üè†'; }
    .icon-contact::before { content: 'üìß'; }
    .icon-help::before { content: '‚ùì'; }
    .icon-back::before { content: '‚Ü©Ô∏è'; }
    .icon-refresh::before { content: 'üîÑ'; }
  </style>
</head>

<body>
  <!-- Contenedor principal con el mensaje de error -->
  <div class="container">
    <!-- Muestra el c√≥digo de estado del error -->
    <h1>
      <% if (typeof status !== 'undefined' && status) { %>
        Error <%= status %>
      <% } else { %>
        Error 404
      <% } %>
    </h1>
    
    <!-- Muestra el mensaje de error -->
    <p>
      <% if (typeof message !== 'undefined' && message) { %>
        <%= message %>
      <% } else { %>
        ¬°Oops! La p√°gina que buscas no se encuentra.
      <% } %>
    </p>
    
    <!-- Descripci√≥n adicional por defecto -->
    <p style="font-size: 1.1rem; margin-bottom: 1.5em; opacity: 0.9;">
      No te preocupes, esto sucede a veces. Puedes intentar las siguientes opciones.
    </p>
    
    <!-- Enlace para volver a la p√°gina principal -->
    <a href="/">Volver a la p√°gina principal</a>
    <a href="javascript:history.back()" class="btn-secondary">P√°gina anterior</a>

    <!-- Cards de opciones PEQUE√ëAS -->
    <div class="options-section">
      <div class="options-title">Opciones r√°pidas:</div>
      
      <div class="options-grid">
        <div class="option-card" onclick="window.location.href='/search'">
          <div class="option-icon icon-search"></div>
          <div class="option-title">Buscar</div>
          <p class="option-description">Encuentra contenido</p>
        </div>
        
        <div class="option-card" onclick="window.location.href='/'">
          <div class="option-icon icon-home"></div>
          <div class="option-title">Inicio</div>
          <p class="option-description">P√°gina principal</p>
        </div>
        
        <div class="option-card" onclick="window.location.href='/contact'">
          <div class="option-icon icon-contact"></div>
          <div class="option-title">Contacto</div>
          <p class="option-description">Obtener ayuda</p>
        </div>
        
        <div class="option-card" onclick="window.location.href='/help'">
          <div class="option-icon icon-help"></div>
          <div class="option-title">Ayuda</div>
          <p class="option-description">Centro de soporte</p>
        </div>
        
        <div class="option-card" onclick="history.back()">
          <div class="option-icon icon-back"></div>
          <div class="option-title">Atr√°s</div>
          <p class="option-description">P√°gina anterior</p>
        </div>
        
        <div class="option-card" onclick="location.reload()">
          <div class="option-icon icon-refresh"></div>
          <div class="option-title">Recargar</div>
          <p class="option-description">Intentar de nuevo</p>
        </div>
      </div>
    </div>

    <!-- Informaci√≥n adicional -->
    <div style="margin-top: 1.5em; padding-top: 1em; border-top: 1px solid rgba(255, 255, 255, 0.2);">
      <p style="font-size: 0.85rem; opacity: 0.7; margin: 0;">
        Si el problema persiste, contacta con nuestro equipo t√©cnico
      </p>
    </div>
  </div>

  <!-- Script para efectos adicionales -->
  <script>
    // Efecto de hover mejorado para las cards de opciones
    document.querySelectorAll('.option-card').forEach(card => {
      card.addEventListener('mouseenter', function() {
        this.style.transform = 'translateY(-5px) scale(1.05)';
      });
      
      card.addEventListener('mouseleave', function() {
        this.style.transform = 'translateY(0) scale(1)';
      });
    });

    // Animaci√≥n de entrada escalonada para las opciones
    document.addEventListener('DOMContentLoaded', function() {
      const cards = document.querySelectorAll('.option-card');
      cards.forEach((card, index) => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(10px)';
        
        setTimeout(() => {
          card.style.transition = 'all 0.4s ease';
          card.style.opacity = '1';
          card.style.transform = 'translateY(0)';
        }, 1200 + (index * 100));
      });
    });

    // Efecto de parallax suave en el fondo
    document.addEventListener('mousemove', function(e) {
      const container = document.querySelector('.container');
      const x = (e.clientX / window.innerWidth - 0.5) * 5;
      const y = (e.clientY / window.innerHeight - 0.5) * 5;
      
      container.style.transform = `translate(${x}px, ${y}px)`;
    });
  </script>
</body>
</html>
