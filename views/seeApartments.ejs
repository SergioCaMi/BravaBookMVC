<style>
/* Animaciones personalizadas */
@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.apartments-section .lead {
  max-width: 700px;
  margin-left: auto;
  margin-right: auto;
}

/* Estadísticas rápidas */
.stats-container {
  font-family: 'Poppins', sans-serif;
}

.stats-container .stat-item {
  min-width: 100px;
}

.stats-container .stat-number {
  font-size: 2.5rem;
}

.stats-container .stat-label {
  font-size: 0.9rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.stats-container .stat-divider {
  width: 1px;
  background-color: rgba(0, 0, 0, 0.1);
  margin: 0 1rem;
}

/* Contenedor principal con glassmorphism */
.apartments-container {
  position: relative;
  z-index: 1;
}

/* Estilos de la tarjeta de apartamento */
.apartment-card {
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.apartment-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15) !important;
}

.apartment-card .card-img-container {
  position: relative;
}

.apartment-card .card-img-container img {
  transform: scale(1);
}

.apartment-card .card-img-container:hover img {
  transform: scale(1.05);
}

.apartment-card .image-overlay {
  background: rgba(0, 0, 0, 0.4);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.apartment-card .card-img-container:hover .image-overlay {
  opacity: 1;
}

.apartment-card .overlay-content {
  opacity: 0;
  transform: translateY(20px);
  transition: opacity 0.3s ease, transform 0.3s ease;
}

.apartment-card .card-img-container:hover .overlay-content {
  opacity: 1;
  transform: translateY(0);
}

.apartment-card .price-badge {
  background: linear-gradient(45deg, #1abc9c, #16a085);
}

.apartment-card .apartment-details .detail-item {
  padding: 0.5rem 0.8rem;
}

.apartment-card .apartment-details .detail-divider {
  width: 1px;
  background-color: rgba(0, 0, 0, 0.1);
  margin: 0 0.5rem;
}

.apartment-card .services-section .services-title {
  color: #6c757d;
}

.apartment-card .service-badge {
  font-size: 0.75rem;
}

.apartment-card .admin-controls .admin-title {
  font-size: 0.9rem;
}

/* No apartments message */
.no-apartments-container {
  border: 2px dashed #dee2e6;
  border-radius: 1rem;
  padding: 3rem;
  background-color: #f8f9fa;
}

.no-apartments-container .no-apartments-icon {
  color: #adb5bd;
}

.no-apartments-container h3 {
  font-weight: 600;
}

/* Tooltip custom style */
.tooltip-inner {
  background-color: #343a40;
  color: #fff;
  border-radius: 0.3rem;
  padding: 0.5rem 0.75rem;
  font-size: 0.85rem;
}

.tooltip.bs-tooltip-auto[data-popper-placement^=top] .tooltip-arrow::before,
.tooltip.bs-tooltip-top .tooltip-arrow::before {
  border-top-color: #343a40;
}

.tooltip.bs-tooltip-auto[data-popper-placement^=bottom] .tooltip-arrow::before,
.tooltip.bs-tooltip-bottom .tooltip-arrow::before {
  border-bottom-color: #343a40;
}

/* Indicadores y controles de carrusel personalizados */
.custom-indicators {
  display: flex;
  gap: 0.75rem;
  align-items: center;
}
.custom-indicator-btn {
  width: 22px;
  height: 22px;
  border-radius: 50%;
  background: #222 !important;
  border: 2px solid #222 !important;
  opacity: 0.6;
  margin: 0 2px;
  transition: all 0.2s;
  box-shadow: 0 2px 8px rgba(0,0,0,0.08);
}
.custom-indicator-btn.active,
.custom-indicator-btn:focus,
.custom-indicator-btn:hover {
  background: #000 !important;
  border-color: #000 !important;
  opacity: 1;
  outline: 2px solid #0d6efd;
}
.custom-carousel-control {
  background: #fff;
  border: 2px solid #222;
  border-radius: 50%;
  width: 38px;
  height: 38px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 8px rgba(0,0,0,0.10);
  transition: background 0.2s, border 0.2s;
  margin: 0 0.5rem;
  opacity: 0.85;
}
.custom-carousel-control:hover,
.custom-carousel-control:focus {
  background: #222;
  border-color: #000;
  opacity: 1;
}
.custom-arrow {
  filter: invert(1) grayscale(1) brightness(0.2);
  width: 1.5rem;
  height: 1.5rem;
}
@media (max-width: 600px) {
  .custom-indicator-btn {
    width: 16px;
    height: 16px;
  }
  .custom-carousel-control {
    width: 28px;
    height: 28px;
  }
}
footer {
  margin-top: 3.5rem !important;
}
</style>
